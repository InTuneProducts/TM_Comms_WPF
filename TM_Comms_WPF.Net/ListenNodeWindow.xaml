<Window x:Class="TM_Comms_WPF.Net.ListenNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TM_Comms_WPF.Net"
        mc:Ignorable="d"
        Title="ListenNodeWindow" Closing="Window_Closing" WindowStartupLocation="Manual" SizeToContent="WidthAndHeight" LocationChanged="Window_LocationChanged" StateChanged="Window_StateChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <Button x:Name="btnLNConnect" Content="Connect" Click="BtnLNConnect_Click" Width="90" Height="26" Margin="2"/>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Padding="3" Margin="5">
                <Grid>
                    <StackPanel>
                        <Grid HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Header" Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Center" Margin="2" Height="26"/>
                            <ComboBox x:Name="cmbLNDataType" IsReadOnly="True" SelectionChanged="CmbLNDataType_SelectionChanged" SelectedIndex="0" Grid.Column="0" Grid.Row="1" Margin="2" Height="26">
                                <ComboBoxItem Content="TMSCT (Script)" Tag="0"/>
                                <ComboBoxItem Content="TMSTA (Status)" Tag="1"/>
                            </ComboBox>
                            <Label Content="sID" Grid.Column="1" Grid.Row="0" Width="50" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="2" Height="26"/>
                            <TextBox x:Name="txtLNScriptID" IsReadOnly="True" Grid.Column="1" Grid.Row="1" Width="50" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="2" Height="26"/>
                        </Grid>
                        <Label Content="Script (Any Function from Expression Editor)" Margin="2" Height="26"/>
                        <TextBox x:Name="txtLNScriptData" TextWrapping="Wrap" TextChanged="TxtLNScriptData_TextChanged" Text="ChangeBase(&quot;RobotBase&quot;)" MinHeight="36" VerticalScrollBarVisibility="Auto" MaxHeight="36" MaxWidth="600" Margin="2"/>
                        <Label Content="Command (Start Byte=$ Header, Data Length, Script ID, Script, *Checksum \r\n)" Margin="2" Height="26"/>
                        <TextBox x:Name="txtLNDataString" TextWrapping="Wrap" IsReadOnly="True" MinHeight="36" MaxHeight="36" VerticalScrollBarVisibility="Auto" MaxWidth="600" Margin="2"/>
                        <Button x:Name="btnLNSend" Content="Send" Click="BtnLNSend_Click" Width="90" Margin="2" Height="26"/>
                    </StackPanel>
                </Grid>
            </Border>


            <Border BorderThickness="1" BorderBrush="Black" CornerRadius="3" Padding="3" Margin="5">
                <StackPanel>
                    <Label Content="Response" HorizontalContentAlignment="Center" Margin="2" Height="26"/>
                    <TextBox x:Name="txtLNDataResponse" IsReadOnly="True" VerticalScrollBarVisibility="Auto" MaxHeight="400" MinHeight="150" HorizontalScrollBarVisibility="Auto" MaxWidth="600" Margin="2"/>

                    <Rectangle x:Name="rectCommandResponse" Fill="Yellow" HorizontalAlignment="Left"/>
                </StackPanel>

            </Border>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Padding="3" Margin="5">
                <StackPanel>
                    <Grid HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="Move Type" Grid.Column="0" Grid.Row="0" Margin="2" Height="26"/>
                        <ComboBox x:Name="CmdMoveType" IsReadOnly="True" SelectedIndex="0" Grid.Column="0" Grid.Row="1" Margin="2" Height="26">
                            <ComboBoxItem Content="Linear" Tag="0"/>
                            <ComboBoxItem Content="Joint" Tag="1"/>
                        </ComboBox>

                        <Label Content="Position Type" Grid.Column="1" Grid.Row="0" Margin="2" Height="26"/>
                        <ComboBox x:Name="CmdPositionType" IsReadOnly="True" SelectedIndex="0" Grid.Column="1" Grid.Row="1" Margin="2" Height="26">
                            <ComboBoxItem Content="Pose (Euler)" Tag="0"/>
                            <ComboBoxItem Content="Joint" Tag="1"/>
                        </ComboBox>
                    </Grid>

                    <Grid HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Content="Position Values: X, Y, Z, Yaw, Pitch, Roll" Grid.Column="0" Grid.Row="0" Margin="2" Height="26"/>
                        <TextBox x:Name="txtLNNewPosition" Text="430, 0, 320,-180.0, 0, 90.0" Grid.Column="0" Grid.Row="1" Margin="2" Height="26"/>
                        <Button x:Name="btnLNNewReadPosition" Content="Read" Width="90" Grid.Column="1" Grid.Row="1" Click="BtnLNNewReadPosition_Click" Margin="2" Height="26"/>
                    </Grid>

                    <Grid MaxWidth="220" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Content="Velocity %" Grid.Column="0" Grid.Row="0" Margin="2" Height="26"/>
                        <ComboBox IsEditable="True" SelectedIndex="0" Grid.Column="0" Grid.Row="1" Margin="2" Height="26">
                            <ComboBoxItem Content="100" Tag="10"/>
                            <ComboBoxItem Content="90" Tag="9"/>
                            <ComboBoxItem Content="80" Tag="8"/>
                            <ComboBoxItem Content="70" Tag="7"/>
                            <ComboBoxItem Content="60" Tag="6"/>
                            <ComboBoxItem Content="50" Tag="5"/>
                            <ComboBoxItem Content="40" Tag="4"/>
                            <ComboBoxItem Content="30" Tag="3"/>
                            <ComboBoxItem Content="20" Tag="2"/>
                            <ComboBoxItem Content="10" Tag="1"/>
                        </ComboBox>
                        <Label Content="Blend %" Grid.Column="1" Grid.Row="0" Margin="2" Height="26"/>
                        <ComboBox IsEditable="True" SelectedIndex="0" Grid.Column="1" Grid.Row="1" Margin="2" Height="26">
                            <ComboBoxItem Content="0" Tag="0"/>
                            <ComboBoxItem Content="10" Tag="1"/>
                            <ComboBoxItem Content="20" Tag="2"/>
                            <ComboBoxItem Content="30" Tag="3"/>
                            <ComboBoxItem Content="40" Tag="4"/>
                            <ComboBoxItem Content="50" Tag="5"/>
                            <ComboBoxItem Content="60" Tag="6"/>
                            <ComboBoxItem Content="70" Tag="7"/>
                            <ComboBoxItem Content="80" Tag="8"/>
                            <ComboBoxItem Content="90" Tag="9"/>
                            <ComboBoxItem Content="100" Tag="10"/>

                        </ComboBox>
                    </Grid>

                </StackPanel>
            </Border>
            <StackPanel>
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Padding="3" Margin="5" >
                    <StackPanel>
                        <Button x:Name="btnLNInsertMove" Content="Insert" Click="BtnLNInsertMove_Click" Width="90" Margin="2" Height="26"/>
                        <TextBox x:Name="txtLNMoves" AcceptsReturn="True" Text="Linear, Pose, 430, 0, 320,-180.0, 0, 90.0, 100, 0, 0&#xA;linear, pose, 330, 0, 320,-180.0, 0, 90.0, 100, 0, 0&#xA;" MinWidth="300" MinHeight="150" MaxWidth="600" MaxHeight="300" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="2"/>
                    </StackPanel>

                </Border>
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Padding="3" Margin="5" >
                    <StackPanel>
                        <Button x:Name="btnLNValidateMoves" Content="Validate / Generate" Click="BtnLNValidateMoves_Click" Width="120" Margin="2" Height="26"/>

                        <TextBox x:Name="txtLNMovesCode" AcceptsReturn="True" MinWidth="300" MinHeight="150" MaxWidth="600" MaxHeight="300" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="2"/>
                        <Button x:Name="btnLNSendMoves" Content="Send" Click="BtnLNSendMoves_Click" Width="90" Margin="2" Height="26"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
